{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/PersonalMedia.slnx",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/PersonalMedia.Web/PersonalMedia.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/PersonalMedia.Web/PersonalMedia.Web.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "EF: Add Migration (PersonalMedia)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "ef",
                "migrations",
                "add",
                "${input:migrationName}",
                "--project",
                "${workspaceFolder}/PersonalMedia.Data/PersonalMedia.Data.csproj",
                "--startup-project",
                "${workspaceFolder}/PersonalMedia.Web/PersonalMedia.Web.csproj"
            ],
            "problemMatcher": []
        },
        {
            "label": "EF: Update Database (PersonalMedia)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "ef",
                "database",
                "update",
                "--project",
                "${workspaceFolder}/PersonalMedia.Data/PersonalMedia.Data.csproj",
                "--startup-project",
                "${workspaceFolder}/PersonalMedia.Web/PersonalMedia.Web.csproj"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "migrationName",
            "type": "promptString",
            "description": "Enter the migration name"
        }
    ]
}
