{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Blazor)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/PersonalMedia.Blazor.Server/bin/Debug/net10.0/PersonalMedia.Blazor.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/PersonalMedia.Blazor.Server",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Attach to .NET Functions",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:azureFunctions.pickProcess}"
        }
    ]
}
