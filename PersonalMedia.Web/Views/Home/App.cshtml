@model List<PersonalMedia.Core.Entities.MediaSet>
@{
    ViewData["Title"] = "Personal Media";
}

<div class="app-container">
    <nav class="navbar navbar-light bg-light border-bottom sticky-top">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Personal Media</span>
            <a href="@Url.Action("SignOut")" class="btn btn-sm btn-outline-secondary">Sign Out</a>
        </div>
    </nav>

    <div class="content-container">
        @if (Model == null || !Model.Any())
        {
            <div class="text-center mt-5">
                <p class="text-muted">No media available yet. Check back soon!</p>
            </div>
        }
        else
        {
            @foreach (var set in Model)
            {
                <div class="media-set" data-set-id="@set.Id">
                    @if (set.MediaItems.Any())
                    {
                        <div class="carousel-container">
                            @if (set.MediaItems.Count > 1)
                            {
                                <button class="carousel-nav prev" onclick="scrollCarousel(@set.Id, -1)">
                                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                                    </svg>
                                </button>
                            }

                            <div class="image-carousel" id="carousel-@set.Id">
                                @foreach (var item in set.MediaItems.Where(m => m.IsActive))
                                {
                                    var hasLike = item.Reactions?.Any(r => r.ReactionType == PersonalMedia.Core.Entities.ReactionType.Like) ?? false;
                                    var hasDislike = item.Reactions?.Any(r => r.ReactionType == PersonalMedia.Core.Entities.ReactionType.Dislike) ?? false;

                                    <div class="image-container" data-item-id="@item.Id">
                                        <div class="image-wrapper">
                                            @if (!string.IsNullOrEmpty(item.AzureStorageUrl))
                                            {
                                                <img src="@item.AzureStorageUrl"
                                                     alt="Media item"
                                                     class="media-image"
                                                     onclick="openImageModal('@item.AzureStorageUrl', @item.Id)">
                                            }
                                            else
                                            {
                                                <div class="placeholder-image">
                                                    <span>Generating...</span>
                                                </div>
                                            }
                                        </div>

                                        <div class="reaction-buttons">
                                            <button class="btn-reaction btn-like @(hasLike ? "active" : "")"
                                                    onclick="toggleReaction(@item.Id, 'like')">
                                                <svg width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                                                    <path d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                                                </svg>
                                            </button>
                                            <button class="btn-reaction btn-dislike @(hasDislike ? "active" : "")"
                                                    onclick="toggleReaction(@item.Id, 'dislike')">
                                                <svg width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>

                            @if (set.MediaItems.Count > 1)
                            {
                                <button class="carousel-nav next" onclick="scrollCarousel(@set.Id, 1)">
                                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
                                    </svg>
                                </button>
                            }
                        </div>

                        @if (set.MediaItems.Count > 1)
                        {
                            <div class="carousel-indicators">
                                @for (int i = 0; i < set.MediaItems.Count; i++)
                                {
                                    <span class="indicator @(i == 0 ? "active" : "")" data-index="@i"></span>
                                }
                            </div>
                        }
                    }
                </div>
            }
        }
    </div>
</div>

<div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content bg-dark">
            <div class="modal-header border-0">
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body d-flex align-items-center justify-content-center">
                <div class="pinch-zoom-container">
                    <img id="modalImage" src="" alt="Full size" class="img-fluid">
                </div>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <div class="reaction-buttons-modal">
                    <button class="btn-reaction btn-like" id="modalLike" onclick="toggleReactionFromModal('like')">
                        <svg width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                        </svg>
                    </button>
                    <button class="btn-reaction btn-dislike" id="modalDislike" onclick="toggleReactionFromModal('dislike')">
                        <svg width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .app-container {
        height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .content-container {
        flex: 1;
        overflow-y: auto;
        -webkit-overflow-scrolling: touch;
    }

    .media-set {
        min-height: calc(100vh - 56px);
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
        padding: 20px 0;
    }

    .carousel-container {
        position: relative;
        width: 100%;
        max-width: 100%;
    }

    .image-carousel {
        display: flex;
        overflow-x: auto;
        scroll-behavior: smooth;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none;
    }

    .image-carousel::-webkit-scrollbar {
        display: none;
    }

    .image-container {
        flex: 0 0 100%;
        scroll-snap-align: center;
        padding: 0 10px;
    }

    .image-wrapper {
        position: relative;
        width: 100%;
        max-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .media-image {
        max-width: 100%;
        max-height: 70vh;
        object-fit: contain;
        cursor: pointer;
        touch-action: pan-y pinch-zoom;
    }

    .placeholder-image {
        width: 100%;
        height: 400px;
        background: #f0f0f0;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #999;
        font-size: 1.2rem;
    }

    .reaction-buttons {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin-top: 20px;
    }

    .reaction-buttons-modal {
        display: flex;
        gap: 40px;
    }

    .btn-reaction {
        background: white;
        border: 3px solid #ddd;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s;
        padding: 0;
    }

    .btn-reaction:hover {
        transform: scale(1.1);
    }

    .btn-like.active {
        background: #ff69b4;
        border-color: #ff1493;
    }

    .btn-like.active svg {
        fill: white;
    }

    .btn-dislike.active {
        background: #dc3545;
        border-color: #a71d2a;
    }

    .btn-dislike.active svg {
        fill: white;
    }

    .carousel-nav {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(255, 255, 255, 0.8);
        border: none;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        z-index: 10;
        transition: all 0.3s;
    }

    .carousel-nav:hover {
        background: rgba(255, 255, 255, 1);
    }

    .carousel-nav.prev {
        left: 10px;
    }

    .carousel-nav.next {
        right: 10px;
    }

    .carousel-indicators {
        display: flex;
        justify-content: center;
        gap: 8px;
        margin-top: 15px;
    }

    .indicator {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: #ddd;
        cursor: pointer;
        transition: all 0.3s;
    }

    .indicator.active {
        background: #007bff;
        width: 12px;
        height: 12px;
    }

    .pinch-zoom-container {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    #modalImage {
        max-width: 100%;
        max-height: calc(100vh - 200px);
        object-fit: contain;
        touch-action: pan-x pan-y pinch-zoom;
    }

    @@media (max-width: 768px) {
        .carousel-nav {
            width: 40px;
            height: 40px;
        }

        .btn-reaction {
            width: 50px;
            height: 50px;
        }

        .btn-reaction svg {
            width: 24px;
            height: 24px;
        }
    }
</style>

<script>
    let currentModalItemId = null;

    function scrollCarousel(setId, direction) {
        const carousel = document.getElementById('carousel-' + setId);
        const itemWidth = carousel.querySelector('.image-container').offsetWidth;
        carousel.scrollLeft += itemWidth * direction;

        setTimeout(() => updateIndicators(setId), 100);
    }

    function updateIndicators(setId) {
        const carousel = document.getElementById('carousel-' + setId);
        const itemWidth = carousel.querySelector('.image-container').offsetWidth;
        const currentIndex = Math.round(carousel.scrollLeft / itemWidth);

        const mediaSet = document.querySelector(`[data-set-id="${setId}"]`);
        const indicators = mediaSet.querySelectorAll('.indicator');

        indicators.forEach((indicator, index) => {
            indicator.classList.toggle('active', index === currentIndex);
        });
    }

    document.querySelectorAll('.image-carousel').forEach(carousel => {
        carousel.addEventListener('scroll', function() {
            const setId = this.id.replace('carousel-', '');
            updateIndicators(setId);
        });
    });

    function toggleReaction(itemId, reactionType) {
        fetch('/api/media/react', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                mediaItemId: itemId,
                reactionType: reactionType
            })
        })
        .then(response => response.json())
        .then(data => {
            updateReactionButtons(itemId, data);
        })
        .catch(error => console.error('Error:', error));
    }

    function updateReactionButtons(itemId, data) {
        const container = document.querySelector(`[data-item-id="${itemId}"]`);
        const likeBtn = container.querySelector('.btn-like');
        const dislikeBtn = container.querySelector('.btn-dislike');

        likeBtn.classList.toggle('active', data.hasLike);
        dislikeBtn.classList.toggle('active', data.hasDislike);

        if (currentModalItemId === itemId) {
            document.getElementById('modalLike').classList.toggle('active', data.hasLike);
            document.getElementById('modalDislike').classList.toggle('active', data.hasDislike);
        }
    }

    function openImageModal(imageUrl, itemId) {
        currentModalItemId = itemId;
        document.getElementById('modalImage').src = imageUrl;

        const container = document.querySelector(`[data-item-id="${itemId}"]`);
        const hasLike = container.querySelector('.btn-like').classList.contains('active');
        const hasDislike = container.querySelector('.btn-dislike').classList.contains('active');

        document.getElementById('modalLike').classList.toggle('active', hasLike);
        document.getElementById('modalDislike').classList.toggle('active', hasDislike);

        const modal = new bootstrap.Modal(document.getElementById('imageModal'));
        modal.show();
    }

    function toggleReactionFromModal(reactionType) {
        if (currentModalItemId) {
            toggleReaction(currentModalItemId, reactionType);
        }
    }

    // Enable pinch-to-zoom on modal image
    let scale = 1;
    let panning = false;
    let pointX = 0;
    let pointY = 0;
    let start = { x: 0, y: 0 };

    const modalImage = document.getElementById('modalImage');

    modalImage.addEventListener('touchstart', function(e) {
        if (e.touches.length === 2) {
            e.preventDefault();
        }
    });

    modalImage.addEventListener('touchmove', function(e) {
        if (e.touches.length === 2) {
            e.preventDefault();
        }
    });
</script>
